<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.geniusplaza.geniusplazachatapp.DashboardActivity">

    <Button
        android:id="@+id/buttonGroupChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group Chat"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="65dp"
        android:layout_marginTop="108dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="buttonGoToGroupChat"/>

    <Button
        android:id="@+id/buttonUserToUserChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Chat"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="47dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonGroupChat"
        tools:layout_constraintBaseline_creator="1"
        android:onClick="buttonGoToUserToUserChat"/>
</android.support.constraint.ConstraintLayout>
